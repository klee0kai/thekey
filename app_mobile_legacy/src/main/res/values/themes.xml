<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <!--    Toolbar  -->
    <style name="AppTheme.ToolBarTheme">
        <item name="tint">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>


    <style name="AppTheme.ToolBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="android:theme">@style/AppTheme.ToolBarTheme</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>


    <!--    Button   -->
    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">@color/btn_text_bg_color_selector</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.ActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:layout_margin">40dp</item>
        <item name="tint">@color/white</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="borderWidth">0dp</item>
    </style>


    <!--    EditText/TextInputEditText/TextInputLayout -->
    <style name="AppTheme.TextInputLayout" />

    <style name="AppTheme.TextInputLayout.Filled">
        <item name="boxBackgroundMode">filled</item>
    </style>

    <style name="AppTheme.TextInputLayout.Transparent">
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="AppTheme.TextInputEditText">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
    </style>


    <!--    TextView  -->
    <style name="AppTheme.TextView.Body1" parent="TextAppearance.MaterialComponents.Body1" />

    <style name="AppTheme.TextView.Body2" parent="TextAppearance.MaterialComponents.Body2" />

    <style name="AppTheme.TextView.Caption" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="AppTheme.TextView.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1" />

    <style name="AppTheme.TextView.Title" parent="TextAppearance.AppCompat.Title" />

    <style name="AppTheme.TextView.Display1" parent="TextAppearance.AppCompat.Display1" />

    <style name="AppTheme.TextView.Subhead" parent="TextAppearance.AppCompat.Subhead" />


    <!-- slider   -->
    <style name="AppTheme.Slider">
        <item name="android:paddingBottom">10dp</item>
    </style>


    <!-- switch  -->
    <style name="AppTheme.SwitchTheme">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>


    <style name="AppTheme.Switch">
        <item name="android:theme">@style/AppTheme.SwitchTheme</item>
    </style>


    <!--  adapter items/imageView ant etc  -->
    <style name="AppTheme.ClickableItem">
        <item name="android:background">?android:attr/selectableItemBackground</item>

    </style>

</resources>